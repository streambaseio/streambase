{
  "name": "@streambase/core",
  "version": "0.0.1",
  "description": "Modern, fast, powerful tRPC framework",
  "homepage": "https://streambase.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/streambaseio/streambase.git"
  },
  "license": "MIT",
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "build": "tsc -b -v packages",
    "build:dev": "tsc -b -v packages --watch",
    "prebuild:prod": "npm run clean",
    "build:prod": "tsc -b -v packages",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --ignore-path ./.prettierignore --write"
    ],
    "packages/**/*.json": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "dependencies": {
    "husky": "^8.0.3",
    "typescipt": "^1.0.0",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.3"
  }
}
